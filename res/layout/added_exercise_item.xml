<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/thumbnail_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#000000" >

            <ImageView
                android:id="@+id/category_img_added"
                android:layout_width="34dip"
                android:layout_height="34dip"
                android:background="#000000"
                android:contentDescription="@string/app_name"
                android:paddingRight="5dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/category_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="28dp"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/minutes_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#FF71B544"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:paddingLeft="5dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:id="@+id/second_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#000000" >

            <TextView
                android:id="@+id/exercise_added"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="28dp"
                android:textColor="@android:color/secondary_text_dark"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:paddingLeft="15dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:id="@+id/fourth_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#000000" >

            <TextView
                android:id="@+id/Sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="28dp"
                android:textColor="@android:color/secondary_text_dark"
                android:textSize="17sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="7dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:id="@+id/third_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#000000" >

            <TextView
                android:id="@+id/calories_burned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="28dp"
                android:textColor="#FF666666"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>